<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnTurnLeft"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="185dp"
        android:layout_marginStart="40dp"
        android:drawableLeft="@drawable/turnleft"
        android:paddingLeft="16dp"
        android:longClickable="true"
        />

    <Button
        android:id="@+id/btnTurnRight"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnTurnLeft"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="185dp"
        android:layout_marginStart="30dp"
        android:drawableLeft="@drawable/turnright"
        android:paddingLeft="16dp"
        android:longClickable="true"/>
    <Button
        android:id="@+id/btnTurnOn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:text="@string/connectToCar"
        android:textStyle="bold"
        android:textColor="@color/Brown"
        />

    <Button
        android:id="@+id/btnTurnOff"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnTurnOn"
        android:text="@string/turnOff"
        android:textStyle="bold"
        android:textColor="@color/Brown"/>
    <Button
        android:id="@+id/btnDícoverable"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnTurnOff"
        android:text="@string/discoverable"
        android:textStyle="bold"
        android:textColor="@color/Brown"/>
    <Button
        android:id="@+id/btnPaire"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnDícoverable"
        android:text="@string/paire"
        android:textStyle="bold"
        android:textColor="@color/Brown"/>

    <TextView
        android:id="@+id/txtStatus"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/btnTurnOff"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/status"
        android:textStyle="bold"
        android:textColor="@color/Brown"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/txtPaire"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/paire"
        android:textColor="@color/Brown"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/btnTurnOff"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtStatus"
        android:layout_marginTop="10dp"/>
    <Button
        android:id="@+id/btnUp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:drawableLeft="@drawable/up"
        android:paddingLeft="16dp"
        android:longClickable="true"/>

    <Button
        android:id="@+id/btnDown"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnUp"
        android:drawableLeft="@drawable/down"
        android:paddingLeft="16dp"
        android:longClickable="true"/>

</androidx.constraintlayout.widget.ConstraintLayout>